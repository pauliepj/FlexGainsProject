@using Microsoft.AspNet.Identity;
@model IEnumerable<FlexGains.Models.Comment>

@{
    ViewBag.Title = "Index";
}


<table class="table">
    <tr>
        <th>
            Comment Date
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account.UserName)
        </th>
        <th>
            Comment
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.CommentDateTime.Value.ToString("MM/dd/yyyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TextBody)
        </td>
        

        <td>
            @if (item.UserId == User.Identity.GetUserId() || User.IsInRole("Admin")) 
            { 
            <text>@Html.ActionLink("Edit", "Edit", new { id=item.CommentId }) |</text>
            <text>@Html.ActionLink("Delete", "Delete", new { id=item.CommentId })</text>
            }
        </td>
    </tr>
}
</table>
