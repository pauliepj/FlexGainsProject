@model FlexGains.Models.Comment

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Comments", FormMethod.Post, new {id = "CommentCreateForm" }))
{

    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.WorkoutId)
    @Html.HiddenFor(model => model.CommentDateTime)
    <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Leave a Comment
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.TextBody, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TextBody, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="Submit" value="Leave Comment" class="btn btn-default" />
            </div>
        </div>
    </div>
 
}