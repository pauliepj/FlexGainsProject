<!DOCTYPE html>
<html>
<head>
    <title>Flex Gains</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/Content/main.css" rel="stylesheet" />
</head>
<body class="subpage">

    <!-- Header -->
    <header id="header" class="alt">
        <div class="logo"><a href="https://localhost:44314/Home/Index"><img src="~/Images/FlexGainsLogo-01.png" height="50" width="50"/></a></div>
        <a href="#menu"><span>Menu</span></a>
    </header>

    <!-- Nav -->
    <nav id="menu">
        <ul class="links">
            @Html.Partial("_LoginPartial")
            <li><a href="/Home/index">Home</a></li>
            <li><a href="/Workouts/ByMuscleGroup">Browse by Muscle Group</a></li>
            <li><a href="/Workouts/Create">Create Your Workout</a></li>
            <li><a href="/Workouts/index/true">Your Saved Workouts</a></li>
            <li><a href="/Workouts/index">All Workouts</a></li>
        </ul>
    </nav>

    <!-- Content -->
    <!--
        Note: To show a background image, set the "data-bg" attribute below
        to the full filename of your image. This is used in each section to set
        the background image.
    -->
    <section id="post" class="wrapper bg-img" data-bg="banner2.jpg">

        <div class="inner">
            @RenderBody()
        </div>
    </section>

    <!-- Footer -->
    <footer id="footer">
        <div class="inner">



            <ul class="icons">
                <li><a href="#" class="icon round fa-twitter"><span class="label">Twitter</span></a></li>
                <li><a href="#" class="icon round fa-facebook"><span class="label">Facebook</span></a></li>
                <li><a href="#" class="icon round fa-instagram"><span class="label">Instagram</span></a></li>
            </ul>

            <div class="copyright">
                &copy; Paul Powell.
            </div>

        </div>
    </footer>

    <!-- Scripts -->

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.scrolly.min.js"></script>
    <script src="~/Scripts/jquery.scrollex.min.js"></script>
    <script src="~/Scripts/skel.min.js"></script>
    <script src="~/Scripts/util.js"></script>
    <script src="~/Scripts/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>