<!DOCTYPE HTML>
@{ Layout = null;}
<html>
<head>
    <title>FlexGains by Paul Powell</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/Content/main.css" rel="stylesheet" />
</head>
<body>

    <!-- Header -->
    <header id="header">
        <a href="#menu"><span>Get started</span></a>
    </header>

    <!-- Nav -->
    <nav id="menu">
        <ul class="links">
            @Html.Partial("_LoginPartial")
            <li><a href="/Home/index">Home</a></li>
            <li><a href="/Workouts/ByMuscleGroup">Browse by Muscle Group</a></li>
            <li><a href="/Workouts/index">All Workouts</a></li>

        </ul>
    </nav>

    <!-- Banner -->
    <!--
        Note: To show a background image, set the "data-bg" attribute below
        to the full filename of your image. This is used in each section to set
        the background image.
    -->
    <section id="banner" class="bg-img" data-bg="banner.jpg">
        <div class="inner">
            <header>

                <img src="~/Images/FlexGainsLogo-01.png" height="240" width="240"/>
                <div>
                    <h2>
                        By Paul Powell
                    </h2>
                </div>
                <h2>
                    <button class="w3-btn w3-round-xxlarge"><a href="https://localhost:44314/Account/Register">Get Started</a></button><h2>
                        <span>
                            <h5>
                                What is FlexGains?  A dynamic web application that allows users to create their own exercises and workouts to help with gym planning.
                                Proper planning is essential when exercising so that you can maintain focus at the gym, outside, or wherever you work out!
                            </h5>
                        </span>
            </header>
        </div>
    </section>

    <!-- Footer -->
    <footer id="footer">
        <div class="inner">
            <ul class="icons">
                <li><a href="#" class="icon round fa-twitter"><span class="label">Twitter</span></a></li>
                <li><a href="#" class="icon round fa-facebook"><span class="label">Facebook</span></a></li>
                <li><a href="#" class="icon round fa-instagram"><span class="label">Instagram</span></a></li>
            </ul>
            <div class="copyright">
                &copy; Paul Powell
            </div>
        </div>
    </footer>

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.scrolly.min.js"></script>
    <script src="~/Scripts/jquery.scrollex.min.js"></script>
    <script src="~/Scripts/skel.min.js"></script>
    <script src="~/Scripts/util.js"></script>
    <script src="~/Scripts/main.js"></script>

</body>
</html>